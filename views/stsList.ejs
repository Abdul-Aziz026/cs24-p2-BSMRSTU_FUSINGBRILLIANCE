<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>User and STS List</title>
    <style>
        table {
            width: 100%;
            border-collapse: collapse;
            margin-bottom: 20px;
        }
        th, td {
            padding: 8px;
            text-align: center;
            border-bottom: 1px solid #ddd;
            width: 25%; /* Set each column to occupy 25% of the table width */
        }
        th {
            background-color: aqua;
        }
    </style>
</head>
<body>

    <h1  style="text-align: center;">STS List</h1>
    <table>
        <thead>
            <tr>
                <th>Ward No</th>
                <th>Capacity</th>
                <th>GPS Location</th>
                <th>STS Manager ID</th>
            </tr>
        </thead>
        <tbody id="stsTableBody">
        </tbody>
    </table>

    <script>
        fetch('/user')
            .then(response => response.json())
            .then(users => {
                const userTableBody = document.getElementById('userTableBody');
                users.forEach(user => {
                    const row = document.createElement('tr');
                    row.innerHTML = `
                        <td>${user.name}</td>
                        <td>${user.email}</td>
                        <td>${user.role}</td>
                    `;
                    userTableBody.appendChild(row);
                });
            })
            .catch(error => console.error('Error fetching users:', error));
        fetch('/sts')
            .then(response => response.json())
            .then(sts => {
                const stsTableBody = document.getElementById('stsTableBody');
                sts.forEach(sts => {
                    const row = document.createElement('tr');
                    row.innerHTML = `
                        <td>${sts.ward_no}</td>
                        <td>${sts.capacity}</td>
                        <td>${sts.gps_location}</td>
                        <td>${sts.sts_mgr_id}</td>
                    `;
                    stsTableBody.appendChild(row);
                });
            })
            .catch(error => console.error('Error fetching STS:', error));
    </script>
</body>
</html>
